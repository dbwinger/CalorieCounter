<%= simple_form_for [@user, @meal] do |f| %>
  <%= f.error_messages %>

    <%= f.input :eaten_at %>

    <%= f.input :image_url %>
    <%= f.input :notes %>
    <%= f.input :public, :html_options => {:checked => true} %>
    <%= f.submit 'Submit for calorie counting' %>
    <%= link_to 'Cancel', :back %>
<% end %>

